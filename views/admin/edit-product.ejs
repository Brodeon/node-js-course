<%- include('../includes/head.ejs') %>

<body>
    <%- include('../includes/navigation.ejs') %>

    <main>
        <form action="/admin/<% if (editing) { %>edit-product/<%= product.id %><% } else { %>product<% } %>" method="POST" class="product-form">
            <div class="form-control">
                <label for="title">Title</label>
                <input type="text" name="title" id="title" value="<% if (editing) { %><%= product.title %><% } %>">
            </div>

            <div class="form-control">
                <label for="title">Image URL</label>
                <input type="text" name="imageURL" id="imageURL" value="<% if (editing) { %><%= product.imageUrl %><% } %>">
            </div>

            <div class="form-control">
                <label for="title">Price</label>
                <input type="number" step="0.01" name="price" id="price" value="<% if (editing) { %><%= product.price %><% } %>">
            </div>

            <div class="form-control">
                <label for="title">Description</label>
                <textarea rows="5" name="description" id="description"><% if (editing) { %><%= product.description %><% } %></textarea>
            </div>

            <button type="submit" class="btn"><% if (editing) { %>
                Edit Product
            <% } else {%>
                Add Product
            <% } %></button>
        </form>
    </main>

<%- include('../includes/end.ejs') %>